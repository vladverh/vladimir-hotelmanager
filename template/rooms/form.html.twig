{% extends 'base.html.twig' %}

{% block title %}
    Gestion de la chambre
{% endblock %}

{% block content %}

    {% if room %}
        <form action="{{env.base_path ~ '/rooms/' ~ room.id ~ '/edit'}}" method="post">
    {% else %}
        <form action="{{env.base_path ~ '/rooms'}}" method="post">
    {% endif %}


        <div class="form-group">
            <label for="formNumber">Numero de chambre</label>
            <input name="number" id="formNumber" type="text" class="form-control" value="{{ room ? room.number : '' }}">
        </div>
        <div class="form-group">
            <label for="formClient">client</label>
            <input name="client" id="formClient" type="text" class="form-control" value="{{ room ? room.client_id : '' }}">
        </div>

        {% if room %}
            <button type="submit" class="btn btn-warning">Éditer la chambre</button>
        {% else %}
            <button type="submit" class="btn btn-primary">Créer la chambre</button>
        {% endif %}

    </form>
{% endblock %}